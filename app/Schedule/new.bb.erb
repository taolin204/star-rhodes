<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Schedule</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @schedule.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">User: </td>
                <td class="itemValue"><input type="text" name="schedule[user_id]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Company: </td>
                <td class="itemValue"><input type="text" name="schedule[company_id]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Interviewee: </td>
                <td class="itemValue"><input type="text" name="schedule[interviewee_id]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Remark: </td>
                <td class="itemValue"><input type="text" name="schedule[remark]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Schedule time: </td>
                <td class="itemValue"><input type="text" name="schedule[schedule_time]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Status: </td>
                <td class="itemValue"><input type="text" name="schedule[status]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
