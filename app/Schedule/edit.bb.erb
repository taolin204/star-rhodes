<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @schedule.object %>
    <h1>Edit <%= @schedule.user_id%></h1>
    <%= link_to "Delete", :action => :delete, :id => @schedule.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @schedule.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">User: </td>
              <td class="itemValue"><input type="text" name="schedule[user_id]" value="<%= @schedule.user_id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Company: </td>
              <td class="itemValue"><input type="text" name="schedule[company_id]" value="<%= @schedule.company_id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Interviewee: </td>
              <td class="itemValue"><input type="text" name="schedule[interviewee_id]" value="<%= @schedule.interviewee_id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Remark: </td>
              <td class="itemValue"><input type="text" name="schedule[remark]" value="<%= @schedule.remark %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Schedule time: </td>
              <td class="itemValue"><input type="text" name="schedule[schedule_time]" value="<%= @schedule.schedule_time %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Status: </td>
              <td class="itemValue"><input type="text" name="schedule[status]" value="<%= @schedule.status %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
