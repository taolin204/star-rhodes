<div data-role="page" data-add-back-btn="false">

  <div data-role="header" data-position="inline">
    <h1><%= @company.address %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="arrow-l" data-direction="reverse">
      Back
    </a>
    <a href="<%= url_for :action => :edit, :id => @company.object %>" class="ui-btn-right" data-icon="star">
      Edit
    </a>
  </div>

  <div data-role="content">
    <ul data-role="listview">
      
          <li>
            <div class="itemLabel">Address</div>
            <div class="itemValue"><%= @company.address %></div>
          </li>
      
          <li>
            <div class="itemLabel">ContactNumber</div>
            <div class="itemValue"><%= @company.contact_number %></div>
          </li>
      
          <li>
            <div class="itemLabel">ContactPerson</div>
            <div class="itemValue"><%= @company.contact_person %></div>
          </li>
      
          <li>
            <div class="itemLabel">Name</div>
            <div class="itemValue"><%= @company.name %></div>
          </li>
      
          <li>
            <div class="itemLabel">PostalCode</div>
            <div class="itemValue"><%= @company.postal_code %></div>
          </li>
      
    </ul>
  </div>

</div>
