<div data-role="page" data-add-back-btn="true">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1><%= @company.address %></h1>
    <%= link_to "Edit", :action => :edit, :id => @company.object %>
  </div>

  <div data-role="content">
    <table>
      
      <tr>
    	<td class="itemLabel">Address</td>
        <td class="itemValue"><%= @company.address%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">ContactNumber</td>
        <td class="itemValue"><%= @company.contact_number%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">ContactPerson</td>
        <td class="itemValue"><%= @company.contact_person%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">Name</td>
        <td class="itemValue"><%= @company.name%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">PostalCode</td>
        <td class="itemValue"><%= @company.postal_code%></td>
      </tr>
      
    </table>
  </div>

</div>
