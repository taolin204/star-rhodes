<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @company.object %>
    <h1>Edit <%= @company.address%></h1>
    <%= link_to "Delete", :action => :delete, :id => @company.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @company.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Address: </td>
              <td class="itemValue"><input type="text" name="company[address]" value="<%= @company.address %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Contact number: </td>
              <td class="itemValue"><input type="text" name="company[contact_number]" value="<%= @company.contact_number %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Contact person: </td>
              <td class="itemValue"><input type="text" name="company[contact_person]" value="<%= @company.contact_person %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Name: </td>
              <td class="itemValue"><input type="text" name="company[name]" value="<%= @company.name %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Postal code: </td>
              <td class="itemValue"><input type="text" name="company[postal_code]" value="<%= @company.postal_code %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
